<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SettingsActivity">

    <!-- Header with back button and title -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← 뒤로"
            android:background="?android:attr/selectableItemBackground"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="설정"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="48dp" />

    </LinearLayout>

    <!-- SMS Pattern Section Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_pattern_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textview_patterns_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="SMS 패턴 추가"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="SMS에서 인식할 카드 이름을 입력하세요"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edittext_pattern"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="패턴 입력 (예: 신한카드)"
                    android:inputType="text"
                    android:background="@drawable/edit_text_background" />

                <Button
                    android:id="@+id/button_add_pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"
                    style="@style/Widget.AppCompat.Button.Colored" />

            </LinearLayout>

            <Button
                android:id="@+id/button_view_patterns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="패턴 보기"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_outline_background"
                android:textColor="@color/primaryColor" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card Management Section Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_card_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_pattern_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textview_card_management_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="카드 관리"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="카드별 결제일과 은행 정보를 설정하세요"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/layout_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="카드명:"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edittext_card_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="신한카드"
                    android:inputType="text"
                    android:background="@drawable/edit_text_background" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="은행:"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edittext_bank_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="신한은행"
                    android:inputType="text"
                    android:background="@drawable/edit_text_background" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_billing_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="결제일:"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edittext_billing_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="15"
                    android:inputType="number"
                    android:background="@drawable/edit_text_background" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cutoff_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="마감일:"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edittext_cutoff_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="10"
                    android:inputType="number"
                    android:background="@drawable/edit_text_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/button_save_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="카드 정보 저장"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:id="@+id/button_view_cards"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="카드 정보 보기"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_outline_background"
                    android:textColor="@color/primaryColor" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/textview_export_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_card_management" />

    <TextView
        android:id="@+id/textview_export_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="데이터 내보내기"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textview_export_description"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview_export_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="결제 내역과 SMS 기록을 다양한 파일 형식으로 내보냅니다."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/button_reparse_sms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_reparse_sms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🔄 데이터 초기화 및 SMS 파싱"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:minHeight="48dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/button_export_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_export_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📁 파일로 내보내기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:minHeight="56dp"
        style="@style/Widget.Material3.Button"
        android:backgroundTint="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>